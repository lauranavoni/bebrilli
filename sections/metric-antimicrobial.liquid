<div class="full_width">
  <div class="metricpage-width">
    {% if section.settings.heading != blank %}
      <div class="section__header title-holder aa">
        <h2><small><strong>{{section.settings.heading}}</strong></small></h2>
      </div>
      {% endif %}
    <div class="metrics">
      {% for block in section.blocks %}
      <div class="metric_part partts">
        {% if block.settings.image != blank %}
        	<img src="{{block.settings.image | img_url: '1024x'}}"/>
        {% endif %}
        {% if block.settings.text != blank %}
        	{{block.settings.text}}
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  
  .partts {
    margin-left: auto;
    width: 26%;
  }@media only screen and (max-width: 767px){
.partts {
    width: 50% !important;
}
  }
</style>

{% schema %}
  {
    "name": "Metrics Antimicrobial",
    "settings": [
		{
          "type": "text",
          "id": "heading",
          "label": "Heading"
  		}
	],
  	"blocks": [
    {
      "type": "Image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
		},
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
  	]
  }
],
	"presets": [{
        "name": "Metrics Antimicrobial",
        "category": "Antimicrobial"
    }
  ]
}
{% endschema %}

