<div class="bgg">
   {% assign list_id = settings.newsletter_list_id %}
        <form id="email_popup_signup" style="max-width: 100%;" class="klaviyo_styling klaviyo_gdpr_embed_{{ list_id }}" action="https://manage.kmail-lists.com/subscriptions/subscribe" data-ajax-submit="https://manage.kmail-lists.com/ajax/subscriptions/subscribe" method="GET" target="_blank" novalidate="novalidate">
       
