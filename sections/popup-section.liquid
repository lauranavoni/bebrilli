              <img src="{{ section.settings.url }}" width="30%" height="10%" alt="Brilli">
            </div>
            <h2 style="    text-align: center;">{{ section.settings.title }}</h2>
            <p class="message" style="    text-align: center;">{{ section.settings.text }}</p>
