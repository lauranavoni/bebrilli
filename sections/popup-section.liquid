    padding: 0!important;
    position: relative;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: .025em;max-width: 100%;margin-bottom:20px;background: black;font-size: 22px;
               ">Sign up</button>
             <a href="{{ section.settings.url1 }}"> <span type="submit" class="klaviyo_submit_button button" style="    width: 100%;    height: 60px!important;
    line-height: 40px!important;
  
    position: relative;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: .025em;margin-bottom:-25px;max-width: 100%;background: black;font-size: 22px;
               ">{{ section.settings.button }}</span></a>
             
            </div>
            <input type="hidden" name="g" value="{{ list_id }}">
          <input type="hidden" name="$fields" value="$consent">
          <input type="hidden" name="$list_fields" value="$consent">
          <div class="klaviyo_messages" style="
    text-align: center;
">
            <div class="success_message" style="display:none;
    text-align: center;
"></div>
            <div class="error_message" style="display:none;"></div>
          </div> 
        </form>
      
  <img class="image12" src="{{section.settings.image1 | img_url: 'master' }}" />
  </div>
  
  
  
  
</div>

  <script type="text/javascript">
         KlaviyoSubscribe.attachToForms('#email_popup_signup', {
          hide_form_on_success: true,
          success_message: "{{ section.settings.thankyou }}",
          extra_properties: {
             $source: '$embed',
             $method_type: "Klaviyo Form",
             $method_id: 'embed',
             $consent_version: 'Embed default text'
          }
         });
        </script>
