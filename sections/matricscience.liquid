<div class="full_width">
  <div class="metricpage-width">
    {% if section.settings.heading != blank %}
      <div class="section__header title-holder aa">
        <h2><small><strong>{{section.settings.heading}}</strong></small></h2>
      </div>
      {% endif %}
    <div class="metrics">
      {% for block in section.blocks %}
      <div class="metric_part">
        {% if block.settings.image != blank %}
        	<img src="{{block.settings.image | img_url: '1024x'}}"/>
        {% endif %}
        {% if block.settings.text != blank %}
        <h3 style="color:black !important;font-weight:300;font-size:16px;">{{block.settings.text | replace: "â€ ", "<sup>*</sup>"}}</h3>
        {% endif %}
      </div>
      {% endfor %}
       {% if section.settings.heading != blank %}
        	<p class="disclaimer">{{section.settings.subheading}}</p>
       {% endif %}
    </div>
  </div>
</div>
<style>
  
 div#shopify-section-matricscience .metric_part strong {
    text-transform: capitalize;
}
  .h3 ,p ,strong{
   color:black; 
    font-size:16px;
  }
  
</style>


{% schema %}
  {
    "name": "Metrics science",
    "settings": [
		{
          "type": "text",
          "id": "heading",
          "label": "Heading"
  		},
		{
          "type": "text",
          "id": "subheading",
          "label": "Sub-Heading"
  		}
	],
  	"blocks": [
    {
      "type": "Image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
		},
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
  	]
  }
],
	"presets": [{
        "name": "Metrics science",
        "category": "Science"
    }
  ]
}
{% endschema %}

